{
  "compilerOptions": {
    "target": "ES2020",     
    "module": "NodeNext",  
    "moduleResolution": "NodeNext",
    "esModuleInterop": true, 
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationDir": "dist/types", 
    "outDir": "dist",
    "allowSyntheticDefaultImports": true, 
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"] 
}